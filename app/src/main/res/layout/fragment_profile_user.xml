<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentUser.Fragment_ProfileUser">

    <LinearLayout
        android:id="@+id/wrapper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_profile_picture"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:src="@drawable/homescreen_bg" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/profile_gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:animateLayoutChanges="true"
                android:background="@drawable/profile_bg"
                android:elevation="@dimen/three"
                android:orientation="vertical"
                android:padding="@dimen/twentyfour"
                tools:targetApi="lollipop"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/eight"
                            android:text="Genadi Dharma"
                            android:textColor="@android:color/black"
                            android:textSize="20sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="085238831025"
                            android:textColor="@android:color/black"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:layout_marginStart="@dimen/four"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:minEms="3"
                        android:singleLine="true"
                        android:text="genadi.alba@gmail.com" />

                    <Button
                        android:layout_width="120dp"
                        android:layout_height="48dp"
                        android:layout_marginStart="@dimen/four"
                        android:layout_marginTop="@dimen/four"
                        android:background="@drawable/stroke_accent_button"
                        android:text="@string/edit_profile"
                        android:textAllCaps="false"
                        android:textColor="@color/colorAccent" />

                    <Button
                        android:layout_width="120dp"
                        android:layout_height="48dp"
                        android:layout_marginStart="@dimen/four"
                        android:layout_marginTop="@dimen/four"
                        android:background="@drawable/stroke_accent_button"
                        android:text="@string/save"
                        android:textAllCaps="false"
                        android:textColor="@color/colorAccent"
                        android:visibility="gone" />
                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_keyboard_arrow_up_black_24dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/eight"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/sixteen"
                    android:background="@drawable/fillable_form"
                    android:drawablePadding="@dimen/eight"
                    android:drawableStart="@drawable/ic_person_lighter_grey_24dp"
                    android:elevation="@dimen/three"
                    android:hint="@string/name"
                    android:inputType="textCapSentences"
                    android:padding="@dimen/eight"
                    tools:targetApi="lollipop" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/eight"
                    android:background="@drawable/fillable_form"
                    android:drawablePadding="@dimen/eight"
                    android:drawableStart="@drawable/ic_phone_light_grey_24dp"
                    android:elevation="@dimen/three"
                    android:hint="@string/phone_number"
                    android:inputType="number"
                    android:padding="@dimen/eight"
                    tools:targetApi="lollipop" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/profile_texts"
                android:layout_width="match_parent"
                android:layout_height="128dp"
                android:layout_gravity="bottom"
                android:animateLayoutChanges="true"
                android:background="@drawable/profile_bg"
                android:elevation="@dimen/three"
                android:orientation="vertical"
                android:padding="@dimen/twentyfour"
                tools:targetApi="lollipop">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/eight"
                            android:text="Genadi Dharma"
                            android:textColor="@android:color/black"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/tv_phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="085238831025"
                            android:textColor="@android:color/black"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_email"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:layout_marginStart="@dimen/four"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:minEms="3"
                        android:singleLine="true"
                        android:text="genadi.alba@gmail.com" />

                    <Button
                        android:id="@+id/btn_edit"
                        android:layout_width="120dp"
                        android:layout_height="48dp"
                        android:layout_marginStart="@dimen/four"
                        android:layout_marginTop="@dimen/four"
                        android:background="@drawable/stroke_accent_button"
                        android:text="@string/edit_profile"
                        android:textAllCaps="false"
                        android:textColor="@color/colorAccent" />

                    <Button
                        android:id="@+id/btn_save"
                        android:layout_width="120dp"
                        android:layout_height="48dp"
                        android:layout_marginStart="@dimen/four"
                        android:layout_marginTop="@dimen/four"
                        android:background="@drawable/stroke_accent_button"
                        android:text="@string/save"
                        android:textAllCaps="false"
                        android:textColor="@color/colorAccent"
                        android:visibility="gone"/>

                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_arrow_up"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_keyboard_arrow_up_black_24dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/eight"/>

                <EditText
                    android:id="@+id/edtNama"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/sixteen"
                    android:background="@drawable/fillable_form"
                    android:drawablePadding="@dimen/eight"
                    android:drawableStart="@drawable/ic_person_lighter_grey_24dp"
                    android:elevation="@dimen/three"
                    android:hint="@string/name"
                    android:inputType="textCapSentences"
                    android:padding="@dimen/eight"
                    tools:targetApi="lollipop" />

                <EditText
                    android:id="@+id/edtTlp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/eight"
                    android:background="@drawable/fillable_form"
                    android:drawablePadding="@dimen/eight"
                    android:drawableStart="@drawable/ic_phone_light_grey_24dp"
                    android:elevation="@dimen/three"
                    android:hint="@string/phone_number"
                    android:inputType="number"
                    android:padding="@dimen/eight"
                    tools:targetApi="lollipop" />

            </LinearLayout>

        </FrameLayout>

    </LinearLayout>


    <Button
        android:id="@+id/btnLogOut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:visibility="gone" />

</FrameLayout>